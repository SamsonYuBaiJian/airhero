<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.airhero.MainActivity">

    <Button
        android:id="@+id/roverButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="179dp"
        android:layout_height="173dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="180dp"
        android:layout_marginRight="180dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/pic1"
        android:visibility="gone"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp" />

    <Button
        android:id="@+id/handheldButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="178dp"
        android:layout_height="218dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-4dp"
        android:layout_marginRight="-4dp"
        android:visibility="gone"
        android:layout_marginBottom="22dp"
        android:background="@drawable/pic3" />

    <Button
        android:id="@+id/userUploadButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="354dp"
        android:layout_height="207dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-2dp"
        android:layout_marginRight="-2dp"
        android:layout_marginBottom="410dp"
        android:background="@drawable/dqwdqq"
        android:text="Regular user"
        android:textSize="36sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/dataButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="359dp"
        android:layout_height="153dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-2dp"
        android:layout_marginRight="-2dp"
        android:layout_marginBottom="244dp"
        android:background="@drawable/mm"
        android:text="Data Acquisition"
        android:textSize="30sp" />

</RelativeLayout>


