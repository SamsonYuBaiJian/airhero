<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.airhero.Activity_Report">

    <Button
        android:id="@+id/finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="-2dp"
        android:background="#FF319FD2"
        android:text="Finish"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <HorizontalScrollView
        android:id="@+id/reportVerticalScroll"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@+id/recommend"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:id="@+id/linearReportPictures"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reportRecommendation"
        android:layout_marginBottom="0dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:text="RECOMMENDATION"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="316dp"
        tools:layout_editor_absoluteY="639dp" />

    <TextView
        android:id="@+id/reportRecommendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/finish"
        android:layout_marginBottom="31dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="Please open all windows within the room for quaility air flow to reduce current level of VOC. "
        tools:layout_editor_absoluteX="316dp"
        tools:layout_editor_absoluteY="639dp" />

</RelativeLayout>